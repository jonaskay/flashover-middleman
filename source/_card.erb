<% link_to url, class: "block md:w-1/2 max-w-xs shadow-md mx-auto md:mx-4 my-8 no-underline text-black" do %>
  <div class="relative w-full h-64">
    <div class="absolute top-0 left-0 w-full h-full z-10" style="background-image: linear-gradient(rgba(39, 121, 189, 0.5), rgba(52, 144, 220, 0.5))">
    </div>
    <%= image_tag image, class: 'w-full h-full object-cover greyscale' %>
  </div>
  <div class="px-4 py-2">
    <h3 class="mb-1 pb-1 border-b border-blue-lighter text-blue-dark leading-tight"><%= title %></h3>
    <p class="leading-normal"><%= body %></p>
  </div>
<% end %>

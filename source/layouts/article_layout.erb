<% wrap_layout :layout do %>
  <%= partial 'article', locals: { article: current_article } %>
  <% if next_article = current_article.next_article %>
    <%= partial 'article_link', locals: { article: next_article, header: 'Next post' } %>
  <% end %>
  <% if previous_article = current_article.previous_article %>
    <%= partial 'article_link', locals: { article: previous_article, header: 'Previous post' } %>
  <% end %>
<% end %>
